{ config, options, pkgs, pkgsLocal, lib, ... }:

with lib;
let 
  cfg = config.modules.x11.xsession;
in
{
  options.modules.x11.xsession = {
    enable = mkEnableOption "xsession";

    videoDrivers = mkOption {
      type = types.str;
      description = "Video drivers to use. See services.xserver.videoDrivers";
    };
  };

  config = mkIf cfg.enable {
    environment.etc."profile.local".text = ''
      # /etc/profile.local: DO NOT EDIT -- autogenerated
      if [ -f "$HOME/.config/profile" ]; then
        . "$HOME/.config/profile"
      fi
    '';

    services.xserver = {
      enable = true;

      # Video config
      videoDrivers = [ cfg.videoDrivers ];

      # WM and such
      displayManager.startx.enable = true;
    };
    
    homeManager.xsession = {
      enable = true;

      # we are using startx, so our xsession should be just xinitrc
      scriptPath = ".xinitrc";
    };
  };
}
